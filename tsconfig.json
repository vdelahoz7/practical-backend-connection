{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "baseUrl": "src",
    "paths": {
      "src/*": ["./*"],
      "types/*": ["./types/*"],
      "assets/*": ["./assets/*"],
      "pages/*": ["./pages/*"],
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist", "build", "scripts", "webpack", "jest", "coverage", "cypress"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
